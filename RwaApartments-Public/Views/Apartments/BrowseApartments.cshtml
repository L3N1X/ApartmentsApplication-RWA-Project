@model RwaApartments_Public.Models.ViewModels.ApartmentsBrowserViewModel

@{
    ViewBag.Title = "Browse apartments";
}

<table class="table table-striped table-condensed">
    <tr>
        <th>
            @*@Html.DisplayNameFor(model => model.Ime)*@
            @Html.Label(expression: "NameEng", labelText: "Name")
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.Prezime)*@
            @Html.Label(expression: "NameEng", labelText: "Pictures")
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.Email)*@
