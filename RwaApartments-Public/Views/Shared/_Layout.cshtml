

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="shortcut icon" href="~/Content/images/apartment.png" type="image/x-icon" />
    @Styles.Render("~/Content")
</head>
<body>
    <nav class="navbar sticky-top navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <div class="navbar-brand">
                <img src="~/Content/images/apartment.png" alt="logo" style="height: 2rem; width: 2rem; margin-right:.5rem" />
                @Html.ActionLink("RWA Apartments", "BrowseApartments", "Apartments", null, new { @class = "navbar-brand white_link" })
            </div>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="">
                <span class="navbar-toggler-icon">
                </span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    @if (HttpContext.Current.User.Identity.Name == "")
                    {
                        <li class="nav-item">
                            @Html.ActionLink("Login", "Index", "Apartments", null, new { @class = "nav-link" })
                        </li>
                    }
                    <li class="nav-item">
                        @Html.ActionLink("Apartments", "BrowseApartments", "Apartments", null, new { @class = "nav-link white_link" })
                    </li>
                </ul>
                <ul class='navbar-nav d-flex'>
                    @if (HttpContext.Current.User.Identity.Name != "")
                    {
                        <li class="nav-item" style="margin-right:.5rem">
                            <span class="nav-link">
                                @Html.ActionLink($"{HttpContext.Current.User.Identity.Name}", "ViewUser", null, new { @class = "nav-link" })
                            </span>
                        </li>
                        <li class="nav-item" style="display:flex; justify-content:center; align-items:center">
                            @Html.ActionLink("Logout", "Logout", "Apartments", null, new { @class = "btn btn-outline-danger" })
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <div class="container py-3 custom_page">
        @RenderBody()
    </div>

    <hr />
    <footer class="mt-auto">
        <div class='text-center'>
            <p>&copy; Algebra Univeristy College - Leon Krušlin 2022</p>
        </div>
    </footer>

    @Scripts.Render("~/Scripts")
    @RenderSection("Scripts", required: false)
</body>
</html>

