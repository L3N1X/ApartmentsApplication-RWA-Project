@section Scripts{
    <script>

        $(document).ready(function () {
            loadReviewListAjax();
        });

        $('#createReview').click(function (e) {
            var valData = $("#createReviewForm").serialize();
            $.ajax({
                type: "POST",
                url: `/Apartments/SubmitApartmentReview`,
                dataType: "json",
                contentType: 'application/x-www-form-urlencoded; charset=UTF-8', 
                data: valData
            }).success(function () {
            });
        });

        $("#createReviewForm").submit(function (e) {
            setTimeout(function () {
                for (var i = 1; i <= 5; i++) {
                    $(`img#${i}`).attr('src', '/Content/images/star_empty.png');
                }
                $("#details").html("");
                $("#details").val("");
                loadReviewListAjax();
            }, 300);
            //loadReviewListAjax();
            //location.reload();
            e.preventDefault();
        })

        $('.carousel-control-prev').click(function (e) {
            e.preventDefault();
        });
        $('.carousel-control-next').click(function (e) {
            e.preventDefault();
        });

        $("#1, #2, #3, #4, #5").on('click', function () {
            var id = this.id;
            for (var i = 1; i <= 5; i++) {
                $(`img#${i}`).attr('src', '/Content/images/star_empty.png');
            }
            for (var i = 1; i <= id; i++) {
                $(`img#${i}`).attr('src', '/Content/images/star.png');
            }
            $("#Stars").val(id);
        });

        function loadReviewListAjax() {
            $.ajax({
                url: `/Apartments/LoadApartmentListView/?apartmentId=@Model.Id`,
                success: function (partialView) {
                    $(".reviews_container").html("")
                    $(".reviews_container").append(partialView);
                }
            });
        }

    </script>
}
