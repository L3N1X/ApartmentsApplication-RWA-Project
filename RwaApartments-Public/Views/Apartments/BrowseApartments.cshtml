        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.Telefon)*@
        </th>
        <th></th>
        <th></th>
    </tr>

    @foreach (var apartment in Model.Apartments)
    {
        <tr>
            <td>
                @*@Html.DisplayFor(modelItem => apartment.NameEng)*@
                @*@Html.DisplayFor(modelItem => apartment);*@
                @*@Html.LabelFor(model => apartment.NameEng);*@
                @Html.Label(expression: "NameEng", labelText: apartment.NameEng)
            </td>
            <td>
                @*@Html.DisplayFor(modelItem => apartment.Status)*@
                @Html.Label(expression: "NameEng", labelText: apartment.PicturesCount.ToString())
            </td>
            <td>
                @*<a href="mailto:@kupac.Email">@kupac.Email</a>*@
                @Html.Label(expression: "NameEng", labelText: apartment.City.Name)
            </td>
            <td>
                @*@Html.DisplayFor(modelItem => apartment.PicturesCount)*@
            </td>
            <td>
                @*@Html.Action("GetNazivGrad", new { id = kupac.GradID })*@
            </td>
            <td>
                @*@Html.ActionLink("Uredi", "Uredi", new { id = kupac.IDKupac }, new { @class = "btn btn-primary btn-sm" })*@
            </td>
        </tr>
    }
</table>

