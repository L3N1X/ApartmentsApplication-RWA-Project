@using RwaApartments_Public.Models.ViewModels
@model RwaApartmaniDataLayer.Models.Apartment
@{
    ViewBag.Title = Model.NameEng;
    StarsViewModel starViewModel = new StarsViewModel
    {
        Stars = Model.Stars,
        TotalReviews = Model.TotalReviews,
        ShowTotalReviews = false
    };
    ContactReservationViewModel contactViewModel = new ContactReservationViewModel
    {
        User = null,
        StartTime = DateTime.Now,
        EndTime = DateTime.Now
    };
    var reviews = Model.Reviews.Reverse();
}

<div class="rounded-3">
    <div class="container">
        <div class="row">
            <div class="col-sm">
                <div id="carouselExampleControls" class="carousel slide rounded-3" data-ride="carousel">
                    <div class="carousel-inner" style=" width:100%; height: 800px !important;">
                        @foreach (var picture in Model.Pictures)
                        {
                            if (picture.Equals(Model.RepresentativePicture))
                            {
                                <div class="carousel-item active">
                                    <img class="d-block w-100 h-100" src="@picture.Base64Content" alt="apartment picture">
                                </div>
                            }
                            else
                            {
                                <div class="carousel-item">
                                    <img class="d-block w-100 h-100" src="@picture.Base64Content" alt="apartment picture">
                                </div>
                            }
                        }
                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev" onclick="$('#carouselExampleControls').carousel('prev')">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next" onclick="$('#carouselExampleControls').carousel('next')">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
        </div>
        <div class="row mt-3 mb-3">
            <div class="col-sm">
                <h2>@Model.NameEng</h2>
            </div>
            <div class="col-md-auto">
                <div style="display:flex; align-items:center; gap:.7em">
                    @Html.Partial("_StarsView", model: starViewModel)
                    @if (!Model.IsAvaliable)
                    {
                        @Html.Partial("_AvaliabilityView", Model.Status)
                    }
                    @Html.Partial("_PriceView", Model.PriceString)
                </div>
            </div>
        </div>
        <div class="row">
            <div style="display:flex; flex-wrap:wrap; gap:.5em">
                @foreach (var tag in Model.Tags)
                {
                    @Html.Partial("_TagViewLight", tag.NameEng)
                }
            </div>
        </div>
        <div class="row mt-3">
            <div class="mb-2">
                <b><span style="height:fit-content"><img src="~/Content/images/location_red.png" style="position: relative; top: -2px;" class="icon" />@Model.City.Name</span></b>
            </div>
            <div>
                <span>@Model.Address</span>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-sm">
                <b>
                    <span><img src="~/Content/images/bed.png" style="position: relative; top: -2px;" class="icon" />@Model.TotalSpaces Beds</span>
                </b>
            </div>
            <div class="col-sm">
                <b>
                    <span><img src="~/Content/images/adult.png" style="position: relative; top: -2px;" class="icon" />@Model.MaxAdults Max adults</span>
                </b>
            </div>
            <div class="col-sm">
                <b>
                    <span><img src="~/Content/images/child.png" style="position: relative; top: -2px;" class="icon" />@Model.MaxChildren Max children</span>
                </b>
            </div>
            <div class="col-sm">
                <b>
                    <span><img src="~/Content/images/room.png" style="position: relative; top: -2px;" class="icon" />@Model.TotalRooms Total rooms</span>
                </b>
            </div>
            <div class="col-sm">
                <b>
                    <span><img src="~/Content/images/sea.png" style="position: relative; top: -2px;" class="icon" />@Model.BeachDistance<span>m from nearest beach</span></span>
                </b>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-sm">
                @if (Model.IsAvaliable)
                {
                    @Html.Partial("_ContactReservation", model: contactViewModel)
                }
            </div>
        </div>
        <div class="row mt-3">
            <form id="createReviewForm">
            <input type="hidden" name="Stars", id="Stars" value="0" />
            <input type="hidden" name="UserId" , value="2" />
            <input type="hidden" name="ApartmentId" , value="@Model.Id" />
            <div class="tag_container_light rounded-3 mb-3 p-3">
                <div class="row">
                    <div class="col-md-auto">
                        <img src="~/Content/images/user_account.png" class="user_icon" />
                    </div>
                    <div class="col-sm">
                        <div class="row h-50">
                            <div class="col-md-auto">
                                <h5 style="width:fit-content">You</h5>
                                <div class="mb-3">
                                    @for (int i = 1; i <= 5; i++)
                                    {
                                        <img id="@i" class="icon star" src="~/Content/images/star_empty.png" />
                                    }
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="row">
                                <div class="col-sm">
                                    <textarea rows="3" cols="1" name="Details" id="details" class="form-control" placeholder="Place your review here..."></textarea>
                                </div>
                                <div class="col-md-auto">
                                    <input type="submit" id="createReview" class="btn btn-outline-danger" value="Submit" style="height:100%" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
